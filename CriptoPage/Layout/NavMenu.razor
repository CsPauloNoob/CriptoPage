
<MudAppBar style="background-color: #111b21">
    <MudImage Fluid="true"
        Style="width: auto; height: 90%"
        Src="images/bitcoin-logo.svg" />

        <MudText Typo="Typo.h5">BitcoinCalc</MudText>

        <MudSpacer/>

        <MudHidden Invert="true" Breakpoint="Breakpoint.Xs">
        <MudMenu
            Color="Color.Default"
            Label="Menu"
            Variant="Variant.Filled" 
            EndIcon="@Icons.Material.Filled.KeyboardArrowDown">

                <MudMenuItem OnClick="NavigateToHome">Home</MudMenuItem>
                <MudMenuItem OnClick="NavigateToSimulacao">Simulador</MudMenuItem>
                <MudMenuItem OnClick="NavigateToContato">Contato</MudMenuItem>
            </MudMenu>
        </MudHidden>

        <MudHidden Invert="true" 
            Breakpoint="Breakpoint.SmAndUp">

            <MudStack Row="true">
                <MudButton OnClick="NavigateToHome" Color="Color.Warning">Home</MudButton>
                <MudButton OnClick="NavigateToSimulacao" Color="Color.Warning">Simulador</MudButton>
                <MudButton OnClick="NavigateToContato" Color="Color.Warning">Contato</MudButton>
            </MudStack>
        </MudHidden>

</MudAppBar>

@code
{
    [Inject]
    private NavigationManager NavigationManager { get; set; }

    private void NavigateToHome()
    {
        NavigationManager.NavigateTo("#hm");
    }

    private void NavigateToSimulacao()
    {
        NavigationManager.NavigateTo("#sm");   
    }

    private void NavigateToContato()
    {
        NavigationManager.NavigateTo("#ctt");
    }
    
}