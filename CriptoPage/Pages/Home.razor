    async Task CalcularGanhos()
    {
        if (!ValidarDatas())
        {
            return;
        }

        var ganhos = CalcularGanhosNoIntervalo(_dataCompra.Value, _dataVenda.Value);

        ParseResults();

        if (ganhos > 0 && ganhos < Result_ValorInicial)
        {
            AtualizarResultados(ganhos, new PaletteLight().Error);
        }

        else if (ganhos > 0 && ganhos > Result_ValorInicial)
        {
            AtualizarResultados(ganhos, new PaletteLight().Success);
        }

        if (ganhos <= 0)
            Result_ValorFinal = 0;
        else
        {
            AjustarMoedas();
            CalcularPorcentagem();   
        }
